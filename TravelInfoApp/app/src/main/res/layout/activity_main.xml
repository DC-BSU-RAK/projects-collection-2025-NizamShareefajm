<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Choose a Destination"
            android:textAlignment="center"
            android:textColor="#9C6600"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardParis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:elevation="6dp"
            android:background="#FFFFFFFF">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="119dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/paris_foreground" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paris"
                        android:textSize="20sp"
                        android:textColor="#7B4700"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City of Lights and Love"
                        android:textSize="14sp"
                        android:textColor="#B36B00"
                        android:layout_marginTop="6dp"/>

                    <Button
                        android:id="@+id/tipParisBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Travel Tip"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#0077B6"
                        android:textColor="#FFF"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTokyo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:elevation="6dp"
            android:background="#FFFFFFFF">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/tokyo_foreground" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tokyo"
                        android:textSize="20sp"
                        android:textColor="#7B4700"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Land of the Rising Sun"
                        android:textSize="14sp"
                        android:textColor="#B36B00"
                        android:layout_marginTop="6dp"/>

                    <Button
                        android:id="@+id/tipTokyoBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Travel Tip"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#0077B6"
                        android:textColor="#FFF"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardNewYork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:elevation="6dp"
            android:background="#FFFFFFFF">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/newyork_foreground" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New York"
                        android:textSize="20sp"
                        android:textColor="#7B4700"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The City That Never Sleeps"
                        android:textSize="14sp"
                        android:textColor="#B36B00"
                        android:layout_marginTop="6dp"/>

                    <Button
                        android:id="@+id/tipNewYorkBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Travel Tip"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#0077B6"
                        android:textColor="#FFF"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardDubai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:elevation="6dp"
            android:background="#FFFFFFFF">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="87dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/dubai_foreground" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="Dubai"
                        android:textColor="#7B4700"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Where Future Meets Tradition"
                        android:textSize="14sp"
                        android:textColor="#B36B00"
                        android:layout_marginTop="6dp"/>

                    <Button
                        android:id="@+id/tipDubaiBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#0077B6"
                        android:text="Travel Tip"
                        android:textColor="#FFF" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLondon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:elevation="6dp"
            android:background="#FFFFFFFF">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/london_foreground" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="London"
                        android:textSize="20sp"
                        android:textColor="#7B4700"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Old Smoke"
                        android:textSize="14sp"
                        android:textColor="#B36B00"
                        android:layout_marginTop="6dp"/>

                    <Button
                        android:id="@+id/tipLondonBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Travel Tip"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#0077B6"
                        android:textColor="#FFF"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSydney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:elevation="6dp"
            android:background="#FFFFFFFF">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="88dp"
                    android:layout_height="121dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/sydney_foreground" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sydney"
                        android:textSize="20sp"
                        android:textColor="#7B4700"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harbour City"
                        android:textSize="14sp"
                        android:textColor="#B36B00"
                        android:layout_marginTop="6dp"/>

                    <Button
                        android:id="@+id/tipSydneyBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Travel Tip"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#0077B6"
                        android:textColor="#FFF"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
